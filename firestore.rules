
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write only their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /daily_progress_and_trophies/{logId} {
      allow read, write: if request.auth != null && logId.startsWith(request.auth.uid);
    }
    
    match /daily_meal/{mealId} {
      allow read, write: if request.auth != null && resource == null || resource.data.userId == request.auth.uid;
    }
    
    match /library/{itemId} {
      allow read, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid);
    }
  }
}
