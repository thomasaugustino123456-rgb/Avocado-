rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Profiles & User Settings (Includes new totalTrophies field)
    match /users/{uid} {
      allow read, write: if isOwner(uid);
    }

    // Daily Activity Logs
    match /daily_logs/{docId} {
      allow read, write: if isSignedIn() && (
        (resource == null || resource.data.userId == request.auth.uid) &&
        (request.resource == null || request.resource.data.userId == request.auth.uid)
      );
    }

    // Library Items (Charts and Food Insights)
    match /Library/{docId} {
      allow read, write: if isSignedIn() && (
        (resource == null || resource.data.userId == request.auth.uid) &&
        (request.resource == null || request.resource.data.userId == request.auth.uid)
      );
    }

    // Food Scanner History
    match /food_scans/{docId} {
      allow read, write: if isSignedIn() && (
        (resource == null || resource.data.userId == request.auth.uid) &&
        (request.resource == null || request.resource.data.userId == request.auth.uid)
      );
    }

    // AI Chat Conversation History
    match /chat_history/{docId} {
      allow read, write: if isSignedIn() && (
        (resource == null || resource.data.userId == request.auth.uid) &&
        (request.resource == null || request.resource.data.userId == request.auth.uid)
      );
    }

    // Support Messaging (Help Center)
    match /supportMessages/{docId} {
      allow create: if true; 
      allow read: if isSignedIn() && (
        (resource != null && resource.data.userId == request.auth.uid) ||
        (request.auth.token.email.matches('.*admin.*'))
      );
    }
  }
}