rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Profiles & Notification settings
    match /users/{uid} {
      allow read, write: if isOwner(uid);
    }

    // Health logs for the 'Export' feature
    match /daily_logs/{docId} {
      allow read, write: if isSignedIn() && (
        (resource == null && request.resource.data.userId == request.auth.uid) || 
        (resource != null && resource.data.userId == request.auth.uid)
      );
    }

    match /Library/{docId} {
      allow read, write: if isSignedIn() && (
        (resource == null && request.resource.data.userId == request.auth.uid) || 
        (resource != null && resource.data.userId == request.auth.uid)
      );
    }

    match /meal_history/{docId} {
      allow read, write: if isSignedIn() && (
        (resource == null && request.resource.data.userId == request.auth.uid) || 
        (resource != null && resource.data.userId == request.auth.uid)
      );
    }

    match /food_scans/{docId} {
      allow read, write: if isSignedIn() && (
        (resource == null && request.resource.data.userId == request.auth.uid) || 
        (resource != null && resource.data.userId == request.auth.uid)
      );
    }

    match /chat_history/{docId} {
      allow read, write: if isSignedIn() && (
        (resource == null && request.resource.data.userId == request.auth.uid) || 
        (resource != null && resource.data.userId == request.auth.uid)
      );
    }

    // Support Messaging (Help Center)
    match /supportMessages/{docId} {
      allow create: if true; 
      // Allow users to read their own messages
      allow read: if isSignedIn() && (
        (resource != null && resource.data.userId == request.auth.uid) ||
        (request.auth.token.email.matches('.*admin.*'))
      );
      allow update, delete: if false; 
    }
  }
}